<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiaryList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#573F51B5">

        <TextView
            android:id="@+id/diary_list"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="다이어리 목록"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_diary"
        android:layout_width="match_parent"
        android:layout_height="615dp">
    </ListView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp">

        <ImageButton
            android:id="@+id/img_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <ImageButton
            android:id="@+id/img_diary_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/note"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"/>

        <ImageButton
            android:id="@+id/img_add_pet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/add"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="230dp"/>

        <ImageButton
            android:id="@+id/img_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/setting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="330dp"/>
    </FrameLayout>

</LinearLayout>